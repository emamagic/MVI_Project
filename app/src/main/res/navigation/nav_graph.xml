<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.emamagic.moviestreaming.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_genreTypeFragment"
            app:destination="@id/genreTypeFragment" />

        <action
            android:id="@+id/action_homeFragment_to_movieListFragment"
            app:destination="@id/movieListFragment" />

        <action
            android:id="@+id/action_homeFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
        <action
            android:id="@+id/action_homeFragment_to_genreListFragment"
            app:destination="@id/genreListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchTypeFragment"
            app:destination="@id/searchTypeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />


    </fragment>


    <fragment
        android:id="@+id/genreTypeFragment"
        android:name="com.emamagic.moviestreaming.ui.genre_type.GenreTypeFragment"
        android:label="fragment_genre"
        tools:layout="@layout/fragment_genre_type" >
        <action
            android:id="@+id/action_genreListFragment_to_movieListFragment"
            app:destination="@id/movieListFragment" />
        <action
            android:id="@+id/action_genreTypeFragment_to_genreListFragment"
            app:destination="@id/genreListFragment" />
    </fragment>


    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.emamagic.moviestreaming.ui.movie_list.MovieListFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" >
        <argument
            android:name="category"
            app:argType="string" />
        <action
            android:id="@+id/action_movieListFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
    </fragment>


    <fragment
        android:id="@+id/movieFragment"
        android:name="com.emamagic.moviestreaming.ui.movie.MovieFragment"
        android:label="fragment_show_detail_movie"
        tools:layout="@layout/fragment_show_detail_movie" >
        <argument
            android:name="movie"
            app:argType="com.emamagic.moviestreaming.db.entity.MovieEntity" />
        <action
            android:id="@+id/action_movieFragment_to_fragmentVideoPlayer"
            app:destination="@id/fragmentVideoPlayer" />
        <action
            android:id="@+id/action_movieFragment_to_episodeListFragment"
            app:destination="@id/episodeListFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentVideoPlayer"
        android:name="com.emamagic.moviestreaming.ui.video_player.FragmentVideoPlayer"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" >
        <argument
            android:name="videoLink"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/episodeListFragment"
        android:name="com.emamagic.moviestreaming.ui.episode_list.EpisodeListFragment"
        android:label="fragment_episode_list"
        tools:layout="@layout/fragment_episode_list" >
        <argument
            android:name="seasonId"
            app:argType="long" />
        <action
            android:id="@+id/action_episodeListFragment_to_fragmentVideoPlayer"
            app:destination="@id/fragmentVideoPlayer" />
    </fragment>
    <fragment
        android:id="@+id/genreListFragment"
        android:name="com.emamagic.moviestreaming.ui.genre_list.GenreListFragment"
        android:label="fragment_genre_list"
        tools:layout="@layout/fragment_genre_list" >
        <action
            android:id="@+id/action_genreListFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
        <argument
            android:name="genreName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.emamagic.moviestreaming.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="searchType"
            app:argType="string" />
        <action
            android:id="@+id/action_searchFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchTypeFragment"
        android:name="com.emamagic.moviestreaming.ui.search_type.SearchTypeFragment"
        android:label="fragment_search_type"
        tools:layout="@layout/fragment_search_type" >
        <action
            android:id="@+id/action_searchTypeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.emamagic.moviestreaming.ui.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.emamagic.moviestreaming.ui.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/loginFragment"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.emamagic.moviestreaming.ui.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/registerFragment"/>
    </fragment>
    <fragment
        android:id="@+id/verifyFragment"
        android:name="com.emamagic.moviestreaming.ui.auth.verify.VerifyFragment"
        android:label="fragment_verify"
        tools:layout="@layout/fragment_verify" />
    <fragment
        android:id="@+id/introFragment"
        android:name="com.emamagic.moviestreaming.ui.intro.intro.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/introFragment"/>
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.emamagic.moviestreaming.ui.intro.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_introFragment"
            app:destination="@id/introFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splashFragment"/>
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splashFragment"/>
    </fragment>


</navigation>