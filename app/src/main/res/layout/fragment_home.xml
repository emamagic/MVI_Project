<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawerLayout"
    android:background="@color/colorPrimary"
    tools:context=".ui.home.HomeFragment">


    <com.google.android.material.navigation.NavigationView
        app:menu="@menu/home_menu"
        android:theme="@style/NavigationStyle"
        app:headerLayout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        android:layout_gravity="start"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:id="@+id/toolbar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie Streaming"
                    android:textColor="@color/textColor"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:fontFamily="monospace"/>


                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_menu_24"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"/>


            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollview"
                android:layout_below="@id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.viewpager.widget.ViewPager
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/slider"/>

                    <com.google.android.material.tabs.TabLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabGravity="center"
                        app:tabBackground="@drawable/bg_tabs"
                        app:tabIndicatorHeight="0dp"
                        android:id="@+id/tabLayout"/>

                    <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:weightSum="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="4.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genre"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:fontFamily="monospace" />

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More >"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="monospace"
                            android:id="@+id/txt_more_genre"/>


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/recyclerView_genre"/>

                    <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:weightSum="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="4.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top Movie IMDb"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:fontFamily="monospace" />

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More >"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="monospace"
                            android:id="@+id/txt_more_top_movie_imdb"/>


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/recyclerView_top_movie_imdb"/>


                    <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:weightSum="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="4.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Movie 2020"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:fontFamily="monospace" />

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More >"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="monospace"
                            android:id="@+id/txt_more_new_movie"/>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/recyclerView_new_movie"/>


                    <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:weightSum="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="4.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Series"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:fontFamily="monospace" />

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More >"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="monospace"
                            android:id="@+id/txt_more_series"/>


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/recyclerView_series"/>



                    <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:weightSum="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="4.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Popular Movie"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:fontFamily="monospace" />

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More >"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="monospace"
                            android:id="@+id/txt_more_popular_movie"/>


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/recyclerView_popular_movie"/>


                    <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:weightSum="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="4.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Animation"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:fontFamily="monospace" />

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More >"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="monospace"
                            android:id="@+id/txt_more_animation"/>


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/recyclerView_animation"/>



                </LinearLayout>


            </ScrollView>


        </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>