<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/otherColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_close_24"
        android:layout_alignParentRight="true"
        android:id="@+id/img_close"/>



    <TextView
        android:layout_below="@id/img_close"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Quality For Download"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:fontFamily="monospace"
        android:textSize="11sp"
        android:id="@+id/txt"/>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt"
        android:layout_marginTop="24dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_download"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/colorAccent">


            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="720 Quality"
                    android:textStyle="bold"
                    android:textColor="@color/otherColor"
                    android:textSize="11sp"
                    android:fontFamily="monospace"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    app:srcCompat="@drawable/ic_baseline_get_app_24"
                    app:tint="@color/otherColor" />




            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/colorAccent">


            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1080 Quality"
                    android:textStyle="bold"
                    android:textColor="@color/otherColor"
                    android:textSize="11sp"
                    android:fontFamily="monospace"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    app:srcCompat="@drawable/ic_baseline_get_app_24"
                    app:tint="@color/otherColor"/>




            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>




</RelativeLayout>